{
    "data": "./data/rechtsform/data.csv",
    "options": {
        "height": 400,
        "margins": {"top": 20, "right": 20, "bottom": 50, "left": 70},
        "title": "Wohnungsbestände nach Rechtsform",
        "subtitle": "Anzahl Wohnungen",
        "footer": "<strong>Q:</strong> GWZ/HWZ 1971-2001, RZ 2011, MZ 2020"
    },
    "mapping": {
        "x": {
            "column": "Jahr",
            "type": "numeric",
            "scale": {
                "type": "linear",
                "range": [0, "@width"],
                "domainAbs": [-4, 4]
            },
            "axis": {
                "ticks": 6,
                "label": "Jahr",
                "format": "",
                "position": "bottom",
                "rotate": 0,
                "format": "c"
            },
            "hover": {
                "format": "c"
            }
        },
        "y": {
            "column": "Anzahl",
            "type": "numeric",
            "stacked": ["type"],
            "scale": {
                "type": "linear",
                "domain": [0, null],
                "domainRel": [0, 0.02],
                "range": ["@height", 0]
            },
            "axis": {
                "ticks": 8,
                "position": "left",
                "grid": true,
                "format": ",.0f"
            },
            "hover": {
                "format": ",.0f"
            }
        },
        "yt": {
            "column": "Anzahl",
            "type": "numeric",
            "scale": {
                "type": "linear",
                "domain": [0, null],
                "domainRel": [0, 0.02],
                "range": [0, "@height"]
            }
        },
        "type": {
            "column": "Type",
            "legend": {
                "size": 16,
                "elements": [{
                    "type": "line",
                    "props": {
                        "x1": 0, "x2": 16, "y1": 8, "y2": 8,
                        "stroke": "@color", "stroke-width": "@stroke-width"
                    }
                }, {
                    "type": "circle",
                    "props": {
                        "cx": 8, "cy": 8, "r": "@r",
                        "fill": "@color"
                    }
                }]
            },
            "props": {
                "common": {
                    "visible": true,
                    "stroke-width": 3,
                    "r": 4
                },
                "manual": {
                    "Hauseigentum":     { "color": "#BBD7EE", "name": "Hauseigentum"},
                    "Wohnungseigentum": { "color": "#5BC5F2", "name": "Wohnungseigentum"},
                    "GBV Miete":        { "color": "#559BD5", "name": "GBV Miete"},
                    "Gemeinde Miete":   { "color": "#C7DF71", "name": "Gemeinde Miete"},
                    "Private Miete":    { "color": "#4B9847", "name": "Private Miete"},
                    "Sonstige":         { "color": "#9CE1F8", "name": "Sonstige"}
                }
            },
            "hover": {

            }
        },
        "geo": {
            "column": "Geo",
            "props": {
                "manual": {
                    "Österreich": { "name": "Österreich"},
                    "Wien": { "name": "Wien"}
                }
            }
        }
    },
    "facets": {
        "dim": ["geo"],
        "scales": ["y", "yt"],
        "cols": 2
    },
    "plot": [
        {
            "type": "path",
            "categories": ["type"],
            "props": {
                "stroke-width": "@stroke-width",
                "stroke-dasharray": "@stroke-dasharray",
                "fill": "none",
                "opacity": 0.2,
                "stroke": "@color",
                "d": {
                    "x": "@x:scaled",
                    "y": "@y:scaled"
                }
            }
        }, {
            "type": "circle",
            "categories": ["type"],
            "props": {
                "fill": "@color",
                "opacity": 0.6,
                "cx": "@x:scaled",
                "cy": "@y:scaled",
                "r": "@r"
            }
        }, {
            "type": "rect",
            "categories": ["type"],
            "props": {
                "fill": "@color",
                "opacity": 0.6,
                "x": "@x:scaled",
                "width": 40,
                "y": "@y:scaled",
                "height": "@yt:scaled",
                "transform": "translate(-20 0)"
            }
        }
    ]
}
