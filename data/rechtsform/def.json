{
    "data": "./data/rechtsform/data.csv",
    "options": {
        "height": 400,
        "margins": {"top": 20, "right": 20, "bottom": 50, "left": 70},
        "title": "Wohnungsbestände nach Rechtsform",
        "subtitle": "Anzahl Wohnungen",
        "footer": "<strong>Q:</strong> GWZ/HWZ 1971-2001, RZ 2011, MZ 2020"
    },
    "mapping": {
        "x": {
            "column": "Jahr",
            "type": "numeric",
            "scale": {
                "range": [0, "@width"],
                "domainAbs": [-4, 4]
            },
            "axis": {
                "ticks": 6,
                "position": "bottom",
                "rotate": 0,
                "format": "c",
                "values": [1971, 1981, 1991, 2001, 2011, 2020]
            },
            "hover": {
                "format": "c"
            }
        },
        "y": {
            "column": "Anzahl",
            "type": "numeric",
            "scale": {
                "domain": [0, null],
                "range": ["@height", 0]
            },
            "axis": {
                "ticks": 8,
                "position": "left",
                "grid": true,
                "format": ",.0f"
            },
            "hover": {}
        },
        "type": {
            "column": "Type",
            "type": "categorical",
            "legend": {
                "symbol": {
                    "size": 16,
                    "elements": [{
                        "type": "rect",
                        "props": {
                            "x": 0, "y": 0, "width": 16, "height": 16,
                            "fill": "@color", "rx": 3
                        }
                    }]
                }
            },
            "props": {
                "common": {
                    "visible": true,
                    "stroke-width": 3,
                    "r": 4,
                    "width": 10,
                    "transform": "translate(-20 0)"
                },
                "manual": {
                    "Hauseigentum":     { "color": "#BBD7EE", "transform": "translate(-25 0)"},
                    "Wohnungseigentum": { "color": "#5BC5F2", "transform": "translate(-15 0)"},
                    "GBV Miete":        { "color": "#559BD5", "transform": "translate( -5 0)"},
                    "Gemeinde Miete":   { "color": "#C7DF71", "transform": "translate(  5 0)"},
                    "Private Miete":    { "color": "#4B9847", "transform": "translate( 15 0)"},
                    "Sonstige":         { "color": "#9CE1F8", "transform": "translate( 25 0)"}
                }
            },
            "hover": {}
        },
        "geo": {
            "column": "Geo",
            "type": "categorical",
            "props": {
                "manual": {
                    "Österreich": { "name": "Österreich"},
                    "Wien": { "name": "Wien"}
                }
            }
        }
    },
    "facets": {
        "dim": ["geo"],
        "scales": [],
        "cols": 2
    },
    "hover": {

    },
    "plot": [
        {
            "type": "bar",
            "categories": ["type"],
            "props": {
                "fill": "@color",
                "opacity": 1,
                "cx": "@x:scaled",
                "width": "@width",
                "height": "@y:scaled",
                "transform": "@transform"
            }
        }
    ]
}
