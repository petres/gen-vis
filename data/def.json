{
    "data": "data.csv",
    "options": {
        "height": 400,
        "width": 900
    },
    "mapping": {
        "x": {
            "column": "year",
            "type": "continuous",

            "scale": {
                "type": "linear",
                "range": [0, "@width"]
            },

            "axis": {
                "ticks": 3,
                "label": "Year",
                "format": "",
                "position": "bottom"
            }
        },
        "y": {
            "column": "value",
            "type": "continuous",

            "scale": {
                "type": "linear",
                "domain": [0, null],
                "range": ["@height", 0]
            },

            "axis": {
                "ticks": 10,
                "label": "Value",
                "position": "left"
            }
        },
        "f": {
            "column": "g1",
            "type": "category"
        },
        "g": {
            "column": "g2",
            "type": "category",
            "legend": {
                "size": 20,
                "elements": [
                    {
                        "type": "rect",
                        "attrs": {
                            "x": 0,
                            "y": 0,
                            "width": 20,
                            "height": 20,
                            "fill": "#EEE",
                            "stroke": "#AAA",
                            "rx": 7,
                            "ry": 7
                        }
                    },
                    {
                        "type": "circle",
                        "attrs": {
                            "cx": 10,
                            "cy": 10,
                            "r": 5,
                            "fill": "@color"
                        }
                    }
                ]
            },
            "common": {
                "opacity": 0.5,
                "stroke-width": 1
            },
            "manual": {
                "A": {
                    "label": "alt",
                    "color": "red"
                },
                "B": {
                    "label": "mittel",
                    "color": "blue",
                    "stroke-width": 3
                },
                "C": {
                    "label": "neu",
                    "color": "green"
                },
                "D": {
                    "label": "bla",
                    "color": "yellow"
                }
            }
        }
    },
    "plot": [
        {
            "type": "path",
            "attrs": {
                "stroke-width": "@stroke-width",
                "fill": "none",
                "opacity": "@opacity",
                "stroke": "@color",
                "d": {
                    "x": "@x:scaled",
                    "y": "@y:scaled"
                }
            }
        }, {
            "type": "circle",
            "attrs": {
                "opacity": "@opacity",
                "r": 3,
                "fill": "@color",
                "cx": "@x:scaled",
                "cy": "@y:scaled"
            }
        }
    ]
}
