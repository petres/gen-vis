{
    "data": "sprit/data.csv",
    "options": {
        "height": 500,
        "width": 900
    },
    "mapping": {
        "x": {
            "column": "date",
            "type": "date",

            "scale": {
                "type": "time",
                "range": [0, "@width"]
            },

            "axis": {
                "ticks": 10,
                "label": "Year",
                "format": "",
                "position": "bottom"
            }
        },
        "y": {
            "column": "price",
            "type": "numeric",

            "scale": {
                "type": "linear",
                "domain": [1.3, null],
                "range": ["@height", 0]
            },

            "axis": {
                "ticks": 8,
                "label": "Preis",
                "position": "left"
            }
        },
        "g": {
            "column": "type",
            "legend": {
                "size": 20,
                "elements": [{
                    "type": "line",
                    "attrs": {
                        "x1": 0,
                        "x2": 20,
                        "y1": 10,
                        "y2": 10,
                        "stroke": "@color",
                        "opacity": "@opacity"
                    }
                }]
            },
            "common": {
                "opacity": 0.7,
                "stroke-width": 1
            },
            "manual": {
                "DIE": {
                    "label": "Diesel",
                    "color": "red"
                },
                "SUP": {
                    "label": "Benzin",
                    "color": "blue"
                }
            }
        },
        "g2": {
            "column": "type",
            "legend": {
                "size": 20,
                "elements": [{
                    "type": "line",
                    "attrs": {
                        "x1": 0,
                        "x2": 20,
                        "y1": 10,
                        "y2": 10,
                        "stroke": "@color",
                        "opacity": "@opacity"
                    }
                }]
            },
            "common": {
                "opacity": 0.7,
                "stroke-width": 1
            },
            "manual": {
                "DIE": {
                    "label": "Diesel",
                    "color": "red"
                },
                "SUP": {
                    "label": "Benzin",
                    "color": "blue"
                }
            }
        }
    },
    "plot": [
        {
            "type": "path",
            "attrs": {
                "stroke-width": "@stroke-width",
                "fill": "none",
                "opacity": "@opacity",
                "stroke": "@color",
                "d": {
                    "x": "@x:scaled",
                    "y": "@y:scaled"
                }
            }
        }
    ]
}
