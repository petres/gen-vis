{
    "data": "./data/wwwi/wwwi-short.csv",
    "options": {
        "height": 400,
        "margins": {"top": 20, "right": 20, "bottom": 50, "left": 50},
        "title": "WWWI",
        "subtitle": "in % gegenüber dem Vorjahr",
        "footer": "Q: WIFO, SECO, Federal Reserve Bank of New Your, Macrobond."
    },
    "mapping": {
        "x": {
            "column": "date",
            "type": "date",
            "scale": {
                "type": "time",
                "orientation": "horizontal",
                "domainRel": [0, 0]
            },
            "axis": {
                "ticks": {
                    "prop": "relative",
                    "ref": "innerWidth",
                    "ratio": 0.011
                },
                "label": "Year",
                "position": "bottom",
                "rotate": 0,
                "format": "%b %y"
            },
            "hover": {
                "format": "%e. %b %Y"
            }
        },
        "y": {
            "column": "value",
            "type": "numeric",
            "scale": {
                "type": "linear",
                "domain": [null, null],
                "domainRel": [-0.1, 0.1],
                "orientation": "vertical"
            },
            "axis": {
                "ticks": 7,
                "position": "left",
                "grid": true,
                "format": ".0f"
            },
            "hover": {
                "format": ".1f"
            }
        },
        "variable": {
            "column": "variable",
            "legend": {
                "symbol": {
                    "size": 16,
                    "elements": [{
                        "type": "line",
                        "props": {
                            "x1": 0, "x2": 16, "y1": 8, "y2": 8,
                            "stroke": "@color", "stroke-width": "@size"
                        }
                    }]
                }
            },
            "props": {
                "common": {
                    "size": 2
                },
                "manual": {
                    "wwwi": { "short": "WWWI", "color": "#5BC5F2", "name": "Wöchentlicher WIFO-Wirtschaftsindex (<strong>WWWI</strong>) für Österreich", "size": 3 },
                    "wea":  { "short":  "WEA", "color": "#4B9847", "name": "Index zur wöchentlichen Wirtschaftsaktivät (<strong>WWA</strong>) für die Schweiz" },
                    "wei":  { "short":  "WEI", "color": "#3F766B", "name": "Wöchentlicher Aktivitätsindex (<strong>WEI</strong>) für die USA" }
                }
            },
            "hover": {
                "props": {
                    "name": "@short"
                }
            }
        }
    },
    "plot": [
        {
            "type": "svg:path",
            "categories": ["variable"],
            "props": {
                "stroke-width": "@size",
                "fill": "none",
                "stroke": "@color",
                "d": {
                    "x": "@x:scaled",
                    "y": "@y:scaled"
                }
            }
        }
    ]
}
