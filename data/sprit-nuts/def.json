{
    "data": "sprit-nuts/data.csv",
    "options": {
        "height": 500, "width": 1000,
        "margins": {"top": 20, "right": 0, "bottom": 30, "left": 80},
        "title": "Spritpreis",
        "subtitle": "nach Typ und Bundesland",
        "footer": "<strong>Quelle:</strong> Tankstellenpreise <a target='_blank' href='https://spritpreisrechner.at'>spritpreisrechner.at</a>"
    },
    "mapping": {
        "x": {
            "column": "date",
            "type": "date",
            "scale": {
                "type": "time",
                "range": [0, "@width"]
            },
            "axis": {
                "ticks": 12,
                "label": "Year",
                "format": "",
                "position": "bottom"
            }
        },
        "y": {
            "column": "priceMean",
            "type": "numeric",
            "scale": {
                "type": "linear",
                "domain": [1, null],
                "range": ["@height", 0]
            },
            "axis": {
                "ticks": 8,
                "label": "Preis",
                "position": "left"
            }
        },
        "type": {
            "column": "fuelType",
            "legend": {
                "size": 16,
                "elements": [{
                    "type": "line",
                    "attrs": {
                        "x1": 0, "x2": 16, "y1": 8, "y2": 8,
                        "stroke": "#888", "stroke-width": 2,
                        "stroke-dasharray": "@stroke-dasharray",
                        "opacity": "@opacity"
                    }
                }]
            },
            "common": {
                "opacity": 0.7
            },
            "manual": {
                "DIE": { "label": "Diesel", "stroke-dasharray": null },
                "SUP": { "label": "Benzin", "stroke-dasharray": 4 }
            }
        },
        "nuts": {
            "column": "nuts2",
            "legend": {
                "size": 16,
                "elements": [{
                    "type": "line",
                    "attrs": {
                        "x1": 0, "x2": 16, "y1": 8, "y2": 8,
                        "stroke": "@color", "stroke-width": "@stroke-width",
                        "opacity": "@opacity"
                    }
                }]
            },
            "common": {
                "opacity": 0.7,
                "stroke-width": 2
            },
            "manual": {
                "W":  { "color": "#559BD5", "label": "Wien" },
                "N":  { "color": "#72BB6F", "label": "Niederösterreich" },
                "B":  { "color": "#559E8F", "label": "Burgenland" },
                "O":  { "color": "#12A7E7", "label": "Oberösterreich" },
                "Sa": { "color": "#96B428", "label": "Salzburg" },
                "St": { "color": "#C3423F", "label": "Steiermark" },
                "K":  { "color": "#F3D039", "label": "Kärnten" },
                "T":  { "color": "#DDEBF7", "label": "Tirol" },
                "V":  { "color": "#E3F1E2", "label": "Vorarlberg" },
                "NA": { "color": "#000000", "label": "Österreich", "stroke-width": 3 }
            }
        }
    },
    "plot": [
        {
            "type": "path",
            "categories": ["type", "nuts"],
            "attrs": {
                "stroke-width": "@stroke-width",
                "stroke-dasharray": "@stroke-dasharray",
                "fill": "none",
                "opacity": "@opacity",
                "stroke": "@color",
                "d": {
                    "x": "@x:scaled",
                    "y": "@y:scaled"
                }
            }
        }
    ]
}
