{
    "data": "data.csv",
    "options": {
        "height": 400,
        "width": 900
    },
    "mapping": {
        "x": {
            "column": "year",
            "type": "continuous",

            "scale": {
                "type": "linear",
                "range": [0, "@width"]
            },

            "axis": {
                "ticks": 3,
                "label": "Year",
                "format": "",
                "position": "bottom"
            }
        },
        "y": {
            "column": "value",
            "type": "continuous",

            "scale": {
                "type": "linear",
                "domain": [0, null],
                "range": ["@height", 0]
            },

            "axis": {
                "ticks": 10,
                "label": "Value",
                "position": "left"
            }
        },
        "f": {
            "column": "g1",
            "type": "category"
        },
        "g": {
            "column": "g2",
            "type": "category",
            "legend": {

            },
            "common": {
                "opacity": 0.2,
                "stroke-width": 2
            },
            "manual": {
                "A": {
                    "label": "alt",
                    "color": "red"
                },
                "B": {
                    "label": "mittel",
                    "color": "blue",
                    "stroke-width": 3
                },
                "C": {
                    "label": "neu",
                    "color": "green"
                },
                "D": {
                    "label": "bla",
                    "color": "yellow"
                }
            }
        }
    },
    "plot": [
        {
            "type": "path",
            "attrs": {
                "stroke-width": "@stroke-width",
                "fill": "none",
                "opacity": "@opacity",
                "stroke": "@color",
                "d": {
                    "x": "@x:scaled",
                    "y": "@y:scaled"
                }
            }
        }, {
            "type": "circle",
            "attrs": {
                "opacity": "@opacity",
                "r": 10,
                "fill": "@color",
                "cx": "@x:scaled",
                "cy": "@y:scaled"
            }
        }, {
            "type": "rect",
            "attrs": {
                "fill": "@color",
                "x": "@x:scaled",
                "y": "@y:scaled",
                "width": 6,
                "height": 6,
                "transform": "translate(-3 -3)"
            }
        }, {
            "type": "text",
            "attrs": {
                "fill": "@color",
                "x": "@x:scaled",
                "y": "@y:scaled",
                "transform": "translate(-3 -3)",
                "text": "@label"
            }
        }
    ]
}
